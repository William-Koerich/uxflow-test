datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Categoria {
  id       Int       @id @default(autoincrement())
  nome     String
  produtos Produto[] // Relacionamento de 1 para muitos com Produto
}

model Produto {
  id          Int           @id @default(autoincrement())
  nome        String
  descricao   String?
  preco       Float
  categoriaId Int
  categoria   Categoria     @relation(fields: [categoriaId], references: [id])
  carrinho    CarrinhoProduto[] // Relacionamento de muitos para muitos com Carrinho
}

model Carrinho {
  id         Int               @id @default(autoincrement())
  usuarioId  Int
  produtos   CarrinhoProduto[] // Relacionamento de muitos para muitos com Produto
}

model CarrinhoProduto {
  produtoId  Int
  carrinhoId Int
  quantidade Int

  produto    Produto  @relation(fields: [produtoId], references: [id])
  carrinho   Carrinho @relation(fields: [carrinhoId], references: [id])

  @@id([produtoId, carrinhoId]) // Chave prim√°ria composta
}